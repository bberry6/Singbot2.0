{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "build",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "removeComments": false,
      "preserveConstEnums": true,
      "declaration": false,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "esModuleInterop":true
    },
    "include": [
        "src\\**\\*.ts",
        "src\\**\\**\\*.ts",
        "src\\*.ts"
     ],
     "exclude": [
      "node_modules\\**.ts"
     ],
    "compileOnSave": true,
  }